
@{
    ViewBag.Title = "Chat";
}

<h2>@ViewBag.Title</h2>
<p>@ViewBag.innerMessage</p>

<div class="container">
    <ul class="list-group">
        @foreach (FacebookDAW.Models.Profile profile in ViewBag.myFriends)
        {
            //la click pe numele unui prieten, se apeleaza metoda StartChat din controller,
            //pt a incepe o conversatie 
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/Chat/StartNormalChat/@profile.Id">
                    <strong>@profile.FirstName @profile.LastName</strong>
                </a>
                <span class="badge badge-primary badge-pill">14</span> <!--pt nr de mesaje necitite-->
            </li>
        }
    </ul>
</div>